<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom_transparent"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/tv_free_event_title"
        style="@style/whiteSansSerifLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="5dp"
        android:text="Breakfast"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_free_event_time"
        style="@style/whiteSansSerifLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="8 - 10am"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_free_event_location"
        style="@style/whiteSansSerifLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_free_event_title"
        android:text="Hotel Restaurant"
        android:textColor="#99ffffff"
        android:textSize="14sp" />
</RelativeLayout>